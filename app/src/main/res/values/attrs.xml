<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextView -->
    <attr name="lTextViewStyle" format="reference" />
    <declare-styleable name="TextView">
        <attr name="lFont" format="string" />
        <attr name="lBorder">
            <flag name="all" value="0x1111" />
            <flag name="left" value="0x0001" />
            <flag name="top" value="0x0100" />
            <flag name="right" value="0x0010" />
            <flag name="bottom" value="0x1000" />
        </attr>
        <attr name="lBorderSize" format="dimension" />
        <attr name="lBorderColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="TRecyclerView">
        <attr name="isReverse" format="boolean" />
        <attr name="isRefreshable" format="boolean" />
        <attr name="needHint" format="boolean" />
        <attr name="itemType" format="reference" />
        <attr name="headType" format="reference" />
        <attr name="footType" format="reference" />
    </declare-styleable>

    <attr name="backgroundCard" format="color" />
    <attr name="textColor" format="color" />
    <attr name="textColorBg" format="color" />
    <attr name="themeType" format="string" />
    <attr name="themeIcon" format="reference" />
    <attr name="colorWhite" format="color" />


</resources>